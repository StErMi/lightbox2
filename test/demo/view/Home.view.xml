<mvc:View controllerName="openui5-flatpickr-demo.controller.Home" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:df="it.designfuture.lightbox">
	<App>
		<pages>
			<Page title="openui5-flatpickr-demo">
				<content>

					<Panel>
						<headerToolbar>
							<Toolbar>
								<Title level="H2" text="Gallery" />
							</Toolbar>
						</headerToolbar>
						<df:Lightbox
							id="lightbox-gallery"
							gallery="lightbox-gallery"
							alwaysShowNavOnTouchDevices="false"
							albumLabel="UI5 image %1 of %2"
							disableScrolling="false"
							fadeDuration="600"
							fitImagesInViewport="true"
							imageFadeDuration="600"
							positionFromTop="50"
							resizeDuration="700"
							showImageNumberLabel="true"
							wrapAround="false"
							>
							<df:content>
								<df:LightboxImage src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/orange-tree.jpg" title="Title 1" alt="Alt 1" />
								<df:LightboxImage src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/submerged.jpg"  title="Title 2" alt="Alt 2" />
								<df:LightboxImage src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/look-out.jpg"  title="Title 3" alt="Alt 3" />
								<df:LightboxImage src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/one-world-trade.jpg"  title="Title 4" alt="Alt 4" />
								<df:LightboxImage src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/drizzle.jpg"  title="Title 5" alt="Alt 5" />
								<df:LightboxImage src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/cat-nose.jpg"  title="Title 6" alt="Alt 6" />
								<df:LightboxImage src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/contrail.jpg"  title="Title 7" alt="Alt 7" />
								<df:LightboxImage src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/golden-hour.jpg"  title="Title 8" alt="Alt 8" />
								<df:LightboxImage src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/flight-formation.jpg"  title="Title 9" alt="Alt 9" />
							</df:content>
						</df:Lightbox>
					</Panel>
					
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>